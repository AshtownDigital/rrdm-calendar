{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/_vercel/health",
      "dest": "/api/_vercel/health.js",
      "methods": ["GET"]
    },
    { 
      "src": "/assets/(.*)", 
      "dest": "/public/assets/$1",
      "headers": { "Cache-Control": "public, max-age=604800" }
    },
    { 
      "src": "/scripts/(.*)", 
      "dest": "/public/scripts/$1",
      "headers": { "Cache-Control": "public, max-age=604800" }
    },
    { 
      "src": "/stylesheets/(.*)", 
      "dest": "/public/stylesheets/$1",
      "headers": { "Cache-Control": "public, max-age=604800" }
    },
    { "src": "/debug", "dest": "/server.js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "env": {
    "NODE_ENV": "staging",
    "VERCEL": "1",
    "SESSION_PERSISTENCE": "true",
    "SESSION_SECRET": "@rrdm-session-secret",
    "DATABASE_URL": "@rrdm-database-url",
    "REDIS_ENABLED": "true",
    "REDIS_MOCK": "false",
    "REDIS_URL": "@rrdm-redis-url",
    "LOG_LEVEL": "info",
    "ENABLE_DEBUG_ROUTES": "false",
    "ENABLE_MOCK_DATA": "false",
    "CSRF_PROTECTION": "true",
    "RATE_LIMIT_ENABLED": "true",
    "RATE_LIMIT_MAX": "50",
    "RATE_LIMIT_WINDOW_MS": "60000",
    "PRISMA_CLIENT_ENGINE_TYPE": "dataproxy"
  }
}
