{% extends "layouts/base.njk" %}

{% block pageTitle %}
  Home | Register Team Internal Services
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">Register Team Internal Services</h1>
    <p class="govuk-body-l">Select a service to continue</p>
  </div>
</div>

<!-- Reference Data Management Section -->
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-l govuk-!-margin-top-6 govuk-!-margin-bottom-4">Reference Data Management</h2>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel: Reference Data Management -->
  <div class="govuk-grid-column-one-third">
    <a href="/reference-data/dashboard" class="app-card-link">
      <div class="app-card app-card--blue">
        <h2 class="govuk-heading-m">Reference Data Management</h2>
        <p class="govuk-body">Manage and maintain reference data for registration systems.</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Reference Data Dashboard -->
  <div class="govuk-grid-column-one-third">
    <a href="/reference-data/dashboard" class="app-card-link">
      <div class="app-card app-card--turquoise">
        <h2 class="govuk-heading-m">Reference Data Dashboard</h2>
        <p class="govuk-body">View the reference data management dashboard.</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Release Notes -->
  <div class="govuk-grid-column-one-third">
    <a href="/reference-data/release-notes" class="app-card-link">
      <div class="app-card app-card--purple">
        <h2 class="govuk-heading-m">Release Notes</h2>
        <p class="govuk-body">View changes across academic years.</p>
      </div>
    </a>
  </div>
</div>

<!-- Academic Management Section -->
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-l govuk-!-margin-top-6 govuk-!-margin-bottom-4">Academic Management</h2>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel: Academic Year -->
  <div class="govuk-grid-column-one-third">
    <a href="/academic-years" class="app-card-link">
      <div class="app-card app-card--green">
        <h2 class="govuk-heading-m">Academic Year</h2>
        <p class="govuk-body">Manage academic years, including start and end dates.</p>
      </div>
    </a>
  </div>
</div>

<!-- Business Change Management Section -->
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-l govuk-!-margin-top-6 govuk-!-margin-bottom-4">Business Change Management</h2>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel: Business Change Requests -->
  <div class="govuk-grid-column-one-third">
    <a href="/bcr" class="app-card-link">
      <div class="app-card app-card--yellow">
        <h2 class="govuk-heading-m">Business Change Requests</h2>
        <p class="govuk-body">Manage and track business change requests.</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Funding Management -->
  <div class="govuk-grid-column-one-third">
    <a href="/funding" class="app-card-link">
      <div class="app-card app-card--green">
        <h2 class="govuk-heading-m">Funding Management</h2>
        <p class="govuk-body">View and manage funding requirements and history.</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Release Management -->
  <div class="govuk-grid-column-one-third">
    <a href="/release-management" class="app-card-link">
      <div class="app-card app-card--turquoise">
        <h2 class="govuk-heading-m">Release Management</h2>
        <p class="govuk-body">Plan and track system releases and deployments.</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Release Diary -->
  <div class="govuk-grid-column-one-third">
    <a href="/release-diary" class="app-card-link">
      <div class="app-card app-card--pink">
        <h2 class="govuk-heading-m">Release Diary</h2>
        <p class="govuk-body">View a calendar of BCRs with assigned releases.</p>
      </div>
    </a>
  </div>
</div>

<!-- Dummy Entities Section -->
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-l govuk-!-margin-top-6 govuk-!-margin-bottom-4">Dummy Entities</h2>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel: Dummy ITT Provider -->
  <div class="govuk-grid-column-one-third">
    <a href="/itt-provider" class="app-card-link">
      <div class="app-card app-card--pink">
        <h2 class="govuk-heading-m">ITT Provider</h2>
        <p class="govuk-body">Manage Initial Teacher Training providers</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Dummy ITT Software Vendor -->
  <div class="govuk-grid-column-one-third">
    <a href="/itt-vendor" class="app-card-link">
      <div class="app-card app-card--red">
        <h2 class="govuk-heading-m">ITT Software Vendor</h2>
        <p class="govuk-body">Manage ITT software vendors and systems</p>
      </div>
    </a>
  </div>
</div>

<!-- Trainee Data Management Section -->
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-l govuk-!-margin-top-6 govuk-!-margin-bottom-4">Trainee Data Management</h2>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel: Trainee Status Transition -->
  <div class="govuk-grid-column-one-third">
    <a href="/trainee-status" class="app-card-link">
      <div class="app-card app-card--purple">
        <h2 class="govuk-heading-m">Trainee Status Transition</h2>
        <p class="govuk-body">Manage trainee status changes and workflows</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Trainee Data Archiving -->
  <div class="govuk-grid-column-one-third">
    <a href="/trainee-archive" class="app-card-link">
      <div class="app-card app-card--grey">
        <h2 class="govuk-heading-m">Trainee Data Archiving</h2>
        <p class="govuk-body">Archive and retrieve historical trainee records</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: Duplicate Record Management -->
  <div class="govuk-grid-column-one-third">
    <a href="/duplicate-records" class="app-card-link">
      <div class="app-card app-card--orange">
        <h2 class="govuk-heading-m">Duplicate Record Management</h2>
        <p class="govuk-body">Identify and resolve duplicate trainee records</p>
      </div>
    </a>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel: Trainee Data Quality Monitoring -->
  <div class="govuk-grid-column-one-third">
    <a href="/data-quality" class="app-card-link">
      <div class="app-card app-card--blue">
        <h2 class="govuk-heading-m">Trainee Data Quality Monitoring</h2>
        <p class="govuk-body">Monitor and improve trainee data quality metrics</p>
      </div>
    </a>
  </div>
</div>

<!-- System Management Section -->
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h2 class="govuk-heading-l govuk-!-margin-top-6 govuk-!-margin-bottom-4">System Management</h2>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel: Performance & Monitoring -->
  <div class="govuk-grid-column-one-third">
    <a href="/monitoring/performance" class="app-card-link">
      <div class="app-card app-card--light-blue">
        <h2 class="govuk-heading-m">Performance & Monitoring</h2>
        <p class="govuk-body">View live system and application metrics</p>
      </div>
    </a>
  </div>
  
  <!-- Panel: User Management -->
  <div class="govuk-grid-column-one-third">
    <a href="/access/manage" class="app-card-link">
      <div class="app-card app-card--orange">
        <h2 class="govuk-heading-m">User Management</h2>
        <p class="govuk-body">Manage user accounts and permissions.</p>
      </div>
    </a>
  </div>
</div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-6">
  <!-- Panel 4 -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card app-card--green">
      <h2 class="govuk-heading-m">Funding</h2>
      <p class="govuk-body">Manage funding requirements for training routes.</p>
      <span class="govuk-tag govuk-tag--green">New module</span>
      <a href="/funding" class="govuk-button govuk-!-margin-bottom-0">Access service</a>
    </div>
  </div>
  
  <!-- Panel 5 -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card app-card--orange">
      <h2 class="govuk-heading-m">Access Management</h2>
      <p class="govuk-body">Manage user accounts and permissions.</p>
      <span class="govuk-tag govuk-tag--orange">Admin only</span>
      {% if user and user.role === 'admin' %}
        <a href="/access/manage" class="govuk-button govuk-!-margin-bottom-0">Access service</a>
      {% else %}
        <a href="#" class="govuk-button govuk-button--disabled govuk-!-margin-bottom-0" aria-disabled="true">Admin only</a>
      {% endif %}
    </div>
  </div>
  
  <!-- Panel 6 -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card app-card--light-blue">
      <h2 class="govuk-heading-m">Reporting</h2>
      <p class="govuk-body">Generate reports and analytics on reference data usage.</p>
      <span class="govuk-tag govuk-tag--light-blue">In progress</span>
      <a href="#" class="govuk-button govuk-!-margin-bottom-0">Access service</a>
    </div>
  </div>
</div>
{% endblock %}
