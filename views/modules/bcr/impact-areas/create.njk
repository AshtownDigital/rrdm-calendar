{% extends "layouts/base-with-nav.njk" %}

{% block title %}Create Impact Area | Register Team Internal Services{% endblock %}

{% block navigation %}
  {% include "partials/bcr-navigation.njk" %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <a href="/bcr/impact-areas" class="govuk-back-link">Back to impact areas</a>
      
      <h1 class="govuk-heading-xl">Create Impact Area</h1>
      
      {% if error %}
        <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
          <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
          </h2>
          <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
              <li>{{ error }}</li>
            </ul>
          </div>
        </div>
      {% endif %}
      
      <form action="/bcr/impact-areas/create" method="post" novalidate>
        <div class="govuk-form-group {% if error and not formData.name %}govuk-form-group--error{% endif %}">
          <label class="govuk-label govuk-label--m" for="name">
            Impact area name
          </label>
          <div id="name-hint" class="govuk-hint">
            A short, descriptive name for the impact area
          </div>
          {% if error and not formData.name %}
            <p id="name-error" class="govuk-error-message">
              <span class="govuk-visually-hidden">Error:</span> Impact area name is required
            </p>
          {% endif %}
          <input class="govuk-input {% if error and not formData.name %}govuk-input--error{% endif %}" id="name" name="name" type="text" aria-describedby="name-hint" value="{{ formData.name }}" required>
        </div>
        
        <div class="govuk-form-group">
          <label class="govuk-label govuk-label--m" for="description">
            Description
          </label>
          <div id="description-hint" class="govuk-hint">
            A detailed description of what this impact area covers
          </div>
          <textarea class="govuk-textarea" id="description" name="description" rows="5" aria-describedby="description-hint">{{ formData.description }}</textarea>
        </div>
        
        <div class="govuk-form-group">
          <label class="govuk-label govuk-label--m" for="displayOrder">
            Display order
          </label>
          <div id="displayOrder-hint" class="govuk-hint">
            Numeric value to determine the order in which this impact area appears (lower numbers appear first)
          </div>
          <input class="govuk-input govuk-input--width-5" id="displayOrder" name="displayOrder" type="number" min="0" aria-describedby="displayOrder-hint" value="{{ formData.displayOrder }}">
        </div>
        
        <div class="govuk-button-group">
          <button class="govuk-button" data-module="govuk-button">
            Create impact area
          </button>
          <a href="/bcr/impact-areas" class="govuk-link govuk-link--no-visited-state">Cancel</a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
