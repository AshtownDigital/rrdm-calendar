{% extends "../../layouts/base.njk" %}
{% from "../release-notes/navigation-tabs/index.njk" import twoTierTabs %}

{% block pageTitle %}
  Reference Data Release Notes - {{ serviceName }}
{% endblock %}

{% block stylesheets %}
  <link href="/stylesheets/govuk-frontend.min.css" rel="stylesheet">
  <link href="/stylesheets/release-notes.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">Reference Data Release Notes</h1>
    
    {# Skip link for keyboard navigation #}
    <a href="#main-content" class="govuk-skip-link" data-module="govuk-skip-link">Skip to main content</a>

    {# Include the two-tier navigation tabs component #}
    {{ twoTierTabs(academicYears, selectedYear, view) }}

    <div class="govuk-tabs__panel" id="tab-overview">
      <h2 class="govuk-heading-l">Overview</h2>
      
      <p class="govuk-body">
        This section provides information about changes to reference data across academic years. 
        Select an academic year from the tabs above to view detailed information about changes 
        for that specific year.
      </p>
      
      <h3 class="govuk-heading-m">Latest Release</h3>
      <p class="govuk-body">
        The latest reference data release is for <strong>{{ latestYear }}</strong>, 
        version <strong>{{ latestVersion }}</strong>, released on 
        <strong>{{ latestReleaseDate | date("D MMMM YYYY") }}</strong>.
      </p>
      
      <div class="govuk-inset-text">
        <p>Please review the changes carefully as they may impact your data submissions and reporting.</p>
      </div>
      
      {# Action Buttons #}
      <div class="govuk-button-group govuk-!-margin-top-6">
        <a href="/" class="govuk-button govuk-button--secondary">
          <span aria-hidden="true">&larr; </span>Back to Dashboard
        </a>
        <a href="?year={{ latestYear }}&view=list" class="govuk-button">
          View Latest Changes
        </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
