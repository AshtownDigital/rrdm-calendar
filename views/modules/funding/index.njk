{% extends "layouts/base.njk" %}

{% block title %}Funding | Register Team Internal Services{% endblock %}

{% block navigation %}
  {% include "partials/funding-navigation.njk" %}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">Funding Management</h1>
    <p class="govuk-body-l">Manage and view funding requirements for 2025-26 training routes</p>
  </div>
</div>

<div class="govuk-grid-row">
  <!-- Panel 1: Funding Requirements -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card">
      <h2 class="govuk-heading-m">Funding Requirements</h2>
      <p class="govuk-body">View and manage funding requirements for all training routes.</p>
      <a href="/funding/requirements" class="govuk-button">Access</a>
    </div>
  </div>
  
  <!-- Panel 2: Funding History -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card">
      <h2 class="govuk-heading-m">Funding History</h2>
      <p class="govuk-body">View historical funding data and changes.</p>
      <a href="/funding/history" class="govuk-button">Access</a>
    </div>
  </div>
  
  <!-- Panel 3: Funding Reports -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card">
      <h2 class="govuk-heading-m">Funding Reports</h2>
      <p class="govuk-body">Generate reports on funding allocations and usage.</p>
      <a href="/funding/reports" class="govuk-button">Access</a>
    </div>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-6">
  <!-- Panel 4: Structured Funding View -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card">
      <h2 class="govuk-heading-m">Structured Funding View</h2>
      <p class="govuk-body">View funding data organized by academic year, funding type, training route, amount, and allocation subject.</p>
      <a href="/funding/structured-view" class="govuk-button">Access</a>
    </div>
  </div>
  
  <!-- Panel 5: Subject Records -->
  <div class="govuk-grid-column-one-third">
    <div class="app-card">
      <h2 class="govuk-heading-m">Subject Records</h2>
      <p class="govuk-body">View individual funding records for each subject with detailed information and priority levels.</p>
      <a href="/funding/subject-records" class="govuk-button">Access</a>
    </div>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-6">
  <div class="govuk-grid-column-full">
    <div class="govuk-button-group">
      <a href="/home" class="govuk-button govuk-button--secondary">Back to Home</a>
    </div>
  </div>
</div>
{% endblock %}
