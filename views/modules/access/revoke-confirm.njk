{% extends "layouts/base-with-nav.njk" %}

{% block title %}Revoke User Access | Register Team Internal Services{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
          <span class="govuk-warning-text__assistive">Warning</span>
          This action will revoke the user's access to the system
        </strong>
      </div>

      <h1 class="govuk-heading-xl">Revoke User Access</h1>
      
      <p class="govuk-body">You are about to revoke access for:</p>
      
      <div class="govuk-inset-text">
        <p class="govuk-body"><strong>Name:</strong> {{ user.name }}</p>
        <p class="govuk-body"><strong>Email:</strong> {{ user.email }}</p>
        <p class="govuk-body"><strong>Role:</strong> 
          {% if user.role === 'admin' %}
            Admin
          {% else %}
            Business User
          {% endif %}
        </p>
        <p class="govuk-body"><strong>User ID:</strong> USID00{{ recordNo }}</p>
      </div>
      
      <p class="govuk-body">This will prevent the user from logging in, but their account information will be preserved. This action can be reversed later.</p>

      <form action="/access/revoke/{{ user.id }}" method="post">
        <div class="govuk-button-group">
          <button type="submit" class="govuk-button govuk-button--warning" data-module="govuk-button">
            Confirm revoke access
          </button>
          <a href="/access/user/{{ user.id }}" class="govuk-button govuk-button--secondary">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
