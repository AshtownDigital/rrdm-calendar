{% extends "layouts/base-with-nav.njk" %}

{% block title %}Restore User Access | Register Team Internal Services{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">Restore User Access</h1>
      
      <p class="govuk-body">You are about to restore access for:</p>
      
      <div class="govuk-inset-text">
        <p class="govuk-body"><strong>Name:</strong> {{ user.name }}</p>
        <p class="govuk-body"><strong>Email:</strong> {{ user.email }}</p>
        <p class="govuk-body"><strong>Role:</strong> 
          {% if user.role === 'admin' %}
            Admin
          {% else %}
            Business User
          {% endif %}
        </p>
        <p class="govuk-body"><strong>User ID:</strong> USID00{{ recordNo }}</p>
      </div>
      
      <p class="govuk-body">This will re-enable the user's account and allow them to log in again.</p>

      <form action="/access/restore/{{ user.id }}" method="post">
        <div class="govuk-button-group">
          <button type="submit" class="govuk-button" data-module="govuk-button">
            Confirm restore access
          </button>
          <a href="/access/user/{{ user.id }}" class="govuk-button govuk-button--secondary">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
