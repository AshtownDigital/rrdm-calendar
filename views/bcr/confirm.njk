{% extends "../layout.njk" %}

{% block pageTitle %}
  {{ title }} - RRDM
{% endblock %}

{% block breadcrumbs %}
  <li class="govuk-breadcrumbs__list-item">
    <a class="govuk-breadcrumbs__link" href="/bcr/dashboard">BCR Dashboard</a>
  </li>
  <li class="govuk-breadcrumbs__list-item">
    {% if bcr %}
      <a class="govuk-breadcrumbs__link" href="/bcr/{{ bcr.id }}">{{ bcr.bcrCode }}</a>
    {% else %}
      <a class="govuk-breadcrumbs__link" href="/bcr/{{ bcrId }}">BCR</a>
    {% endif %}
  </li>
  <li class="govuk-breadcrumbs__list-item">
    Confirmation
  </li>
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">
          {{ title }}
        </h1>
        <div class="govuk-panel__body">
          {{ message }}
        </div>
      </div>

      <h2 class="govuk-heading-m">What happens next</h2>

      <p class="govuk-body">
        {% if action === 'update' %}
          The BCR has been updated with the new phase and status. The workflow history has been updated to reflect this change.
        {% elif action === 'review' %}
          The BCR has been reviewed and the status has been updated. The workflow history has been updated to reflect this change.
        {% elif action === 'phase' %}
          The BCR phase has been updated. The workflow history has been updated to reflect this change.
        {% else %}
          The action has been completed successfully.
        {% endif %}
      </p>

      <div class="govuk-button-group">
        {% if bcr %}
          <a href="/bcr/{{ bcr.id }}" class="govuk-button">Return to BCR</a>
        {% elif bcrId %}
          <a href="/bcr/{{ bcrId }}" class="govuk-button">Return to BCR</a>
        {% else %}
          <a href="/bcr/dashboard" class="govuk-button">Return to Dashboard</a>
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
