{% extends "layouts/base.njk" %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-error-summary" role="alert" tabindex="-1" data-module="govuk-error-summary">
      <h2 class="govuk-error-summary__title">
        {{ title if title else 'Something went wrong' }}
      </h2>
      <div class="govuk-error-summary__body">
        <p class="govuk-body">
          {{ message if message else 'If you typed the web address, check it is correct.' }}
        </p>
      </div>
    </div>

    <div class="govuk-button-group">
      <a href="/" class="govuk-button govuk-button--primary">
        Return to Dashboard
      </a>
      <a href="/release-notes" class="govuk-button govuk-button--secondary">
        View Release Notes
      </a>
    </div>
  </div>
</div>
{% endblock %}
