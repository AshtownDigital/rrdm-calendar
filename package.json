{
  "name": "reference-data-management",
  "version": "1.0.0",
  "description": "Reference Data Management System using GOV.UK Frontend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:db": "node start-db-app.js",
    "dev": "nodemon --watch '**/*.js' --watch '**/*.njk' --watch '**/*.json' --watch '**/*.md' server.js",
    "dev:db": "nodemon --watch '**/*.js' --watch '**/*.njk' --watch '**/*.json' --watch '**/*.md' start-db-app.js",
    "db:init": "node scripts/init-db.js",
    "db:migrate": "node scripts/run-migrations.js",
    "db:seed": "node scripts/seed-db.js",
    "build": "mkdir -p public/stylesheets public/scripts public/assets && cp -R node_modules/govuk-frontend/dist/govuk/assets public/ && cp node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.css public/stylesheets/ && cp node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.css.map public/stylesheets/ && cp node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.js public/scripts/",
    "vercel-build": "npm run build && npm run db:migrate",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@quixo3/prisma-session-store": "^3.1.13",
    "bcryptjs": "^2.4.3",
    "connect-flash": "^0.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.6",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-session": "^1.17.3",
    "govuk-frontend": "^5.9.0",
    "nunjucks": "^3.2.4",
    "nunjucks-date-filter": "^0.1.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.15.6",
    "prisma": "^6.7.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@vercel/node": "^3.0.15",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "memorystore": "^1.6.7",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverage": true,
    "coverageReporters": ["text", "lcov"],
    "coverageDirectory": "coverage",
    "moduleDirectories": ["node_modules", "src"],
    "testTimeout": 10000
  }
}
