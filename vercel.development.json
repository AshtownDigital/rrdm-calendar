{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { 
      "src": "/assets/(.*)", 
      "dest": "/public/assets/$1",
      "headers": { "Cache-Control": "public, max-age=86400" }
    },
    { 
      "src": "/scripts/(.*)", 
      "dest": "/public/scripts/$1",
      "headers": { "Cache-Control": "public, max-age=86400" }
    },
    { 
      "src": "/stylesheets/(.*)", 
      "dest": "/public/stylesheets/$1",
      "headers": { "Cache-Control": "public, max-age=86400" }
    },
    { "src": "/debug", "dest": "/server.js" },
    { "src": "/(.*)", "dest": "/server.js" }
  ],
  "env": {
    "NODE_ENV": "development",
    "VERCEL": "1",
    "SESSION_PERSISTENCE": "true",
    "PORT": "24680",
    "SESSION_SECRET": "rrdm-dev-secret-key",
    "DATABASE_URL": "postgresql://neondb_owner:npg_mZbQp7qF9zSN@ep-dawn-band-a5wldje4-pooler.us-east-2.aws.neon.tech/neondb_dev?sslmode=require"
  }
}
