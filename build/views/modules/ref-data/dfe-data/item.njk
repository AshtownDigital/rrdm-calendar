{% extends "layouts/base.njk" %}

{% block pageTitle %}
  {{ title }} - {{ listName }} - Reference Data Management
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      
      <p class="govuk-body">
        <span class="govuk-tag">{{ listName }}</span>
      </p>
    </div>
  </div>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <dl class="govuk-summary-list">
        {% for key, value in item %}
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ key | title }}
            </dt>
            <dd class="govuk-summary-list__value">
              {% if value === true %}
                <span class="govuk-tag govuk-tag--green">Yes</span>
              {% elif value === false %}
                <span class="govuk-tag govuk-tag--red">No</span>
              {% else %}
                {{ value }}
              {% endif %}
            </dd>
          </div>
        {% endfor %}
      </dl>
    </div>
  </div>
  
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <a href="/ref-data/dfe-data/list/{{ listId }}" class="govuk-back-link">Back to {{ listName }}</a>
    </div>
  </div>
{% endblock %}
