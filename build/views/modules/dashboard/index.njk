{% extends "../../layouts/base.njk" %}

{% block pageTitle %}
  Dashboard - {{ serviceName }}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">Reference Data Management Dashboard</h1>

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-third">
        <div class="app-card app-card--blue">
          <h2 class="govuk-heading-m">Reference Data Items for {{ selectedYear }}</h2>
          <p class="govuk-body">View and manage reference data items</p>
          <a href="/items" class="govuk-button govuk-!-margin-bottom-0">View Items</a>
        </div>
      </div>

      <div class="govuk-grid-column-one-third">
        <div class="app-card app-card--light-blue">
          <h2 class="govuk-heading-m">Performance & Monitoring</h2>
          <p class="govuk-body">View live system and application metrics</p>
          <a href="/monitoring/performance" class="govuk-button govuk-!-margin-bottom-0">View Monitoring</a>
        </div>
      </div>

      <div class="govuk-grid-column-one-third">
        <div class="app-card app-card--yellow">
          <h2 class="govuk-heading-m">Release Notes</h2>
          <p class="govuk-body">View changes across academic years</p>
          <a href="/release-notes" class="govuk-button govuk-!-margin-bottom-0">View Release Notes</a>
        </div>
      </div>

      <div class="govuk-grid-column-one-third">
        <div class="app-card app-card--grey">
          <h2 class="govuk-heading-m">Latest Updates</h2>
          <p class="govuk-body">{{ latestYear }} - Version {{ latestVersion }}</p>
          <a href="/release-notes?year={{ latestYear }}" class="govuk-button govuk-!-margin-bottom-0">View Latest</a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}