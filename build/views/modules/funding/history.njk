{% extends "layouts/base.njk" %}

{% block title %}Funding History | Register Team Internal Services{% endblock %}

{% block navigation %}
  {% include "partials/funding-navigation.njk" %}
{% endblock %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <h1 class="govuk-heading-xl">Funding History</h1>
    <p class="govuk-body-l">Historical funding data and changes for training routes</p>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <table class="govuk-table">
      <caption class="govuk-table__caption govuk-table__caption--m">Funding Changes History</caption>
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header">Academic Year</th>
          <th scope="col" class="govuk-table__header">Training Route</th>
          <th scope="col" class="govuk-table__header">Funding Type</th>
          <th scope="col" class="govuk-table__header">Previous Amount</th>
          <th scope="col" class="govuk-table__header">New Amount</th>
          <th scope="col" class="govuk-table__header">Change Date</th>
          <th scope="col" class="govuk-table__header">Change Type</th>
          <th scope="col" class="govuk-table__header">Actions</th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        {% for change in changes %}
        <tr class="govuk-table__row">
          <td class="govuk-table__cell">{{ change.academicYear }}</td>
          <td class="govuk-table__cell">{{ change.trainingRoute }}</td>
          <td class="govuk-table__cell">{{ change.fundingType }}</td>
          <td class="govuk-table__cell">£{{ change.previousAmount | toLocaleString }}</td>
          <td class="govuk-table__cell">£{{ change.newAmount | toLocaleString }}</td>
          <td class="govuk-table__cell">{{ change.changeDate | date }}</td>
          <td class="govuk-table__cell">{{ change.changeType }}</td>
          <td class="govuk-table__cell">
            <a href="/funding/history/{{ change.id }}" class="govuk-link">View Details</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

<div class="govuk-grid-row govuk-!-margin-top-6">
  <div class="govuk-grid-column-full">
    <div class="govuk-button-group">
      <a href="/funding" class="govuk-button govuk-button--secondary">Back to Funding</a>
      <a href="/home" class="govuk-button govuk-button--secondary">Back to Home</a>
    </div>
  </div>
</div>
{% endblock %}
