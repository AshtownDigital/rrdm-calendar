{% extends "layouts/base-with-nav.njk" %}

{% block title %}Prioritisation Confirmation | Register Team Internal Services{% endblock %}

{% block navigation %}
  {% include "partials/bcr-navigation.njk" %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      <div class="govuk-panel govuk-panel--confirmation">
        <h1 class="govuk-panel__title">
          Prioritisation {{ action }}
        </h1>
        <div class="govuk-panel__body">
          BCR: <strong>{{ bcrId }}</strong><br>
          {{ bcrTitle }}
        </div>
      </div>

      <div class="govuk-!-margin-top-8">
        <h2 class="govuk-heading-m">What happens next</h2>
        <p class="govuk-body">
          {% if action == 'created' %}
            The prioritisation has been created and is now visible in the prioritisation list.
          {% elif action == 'updated' %}
            The prioritisation has been updated with your changes.
          {% elif action == 'deleted' %}
            The prioritisation has been deleted and is no longer visible in the prioritisation list.
          {% endif %}
        </p>
        
        <p class="govuk-body">
          You can:
        </p>
        
        <ul class="govuk-list govuk-list--bullet">
          <li>
            <a href="/bcr/prioritisation" class="govuk-link">Return to the prioritisation list</a>
          </li>
          <li>
            <a href="/bcr/submissions/{{ bcrId }}" class="govuk-link">View the BCR details</a>
          </li>
          {% if action != 'deleted' %}
          <li>
            <a href="/bcr/prioritisation/{{ bcrId }}/edit" class="govuk-link">Edit this prioritisation</a>
          </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
{% endblock %}
